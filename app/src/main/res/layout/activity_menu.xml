<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/vectorstock_5222239">



        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="Hi User!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_menu_play"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Play"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:elevation="4dp"
            app:icon="@drawable/ic_baseline_play_arrow_24" />

        <Button
            android:id="@+id/btn_menu_how_to_play"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="How to play"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:elevation="4dp"
            app:icon="@drawable/ic_baseline_help_24" />

        <Button
            android:id="@+id/btn_menu_stats"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Stats"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:elevation="4dp"
            app:icon="@drawable/ic_baseline_show_chart_24" />

        <Button
            android:id="@+id/btn_menu_settings"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="210dp"
            android:layout_height="60sp"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:elevation="4dp"
            app:icon="@drawable/ic_baseline_settings_24" />




</LinearLayout>