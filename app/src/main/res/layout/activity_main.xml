<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbb033"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/iv_sc_image"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/jeepney"
        android:contentDescription="@string/iv_cd_sc" />

    <TextView
        android:id="@+id/tv_sc_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers1"
        android:gravity="center"
        android:text="Pinoy Quiz"
        android:textColor="@color/colorAccent"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_sc_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/antic1"
        android:gravity="center"
        android:text="Gaano mo kaalam ang iyong bansa?"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="normal" />

</LinearLayout>